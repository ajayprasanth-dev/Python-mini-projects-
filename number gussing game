
import random

def welcome():
    print("ðŸŽ‰ Welcome to the Number Guessing Game!")
    print("I'm thinking of a number between 1 and 100.")
    print("Can you guess what it is?\n")

def get_valid_input(prompt):
    while True:
        try:
            guess = int(input(prompt))
            if 1 <= guess <= 100:
                return guess
            else:
                print("Please enter a number between 1 and 100.")
        except ValueError:
            print("Oops! That doesn't look like a number. Try again.")

def play_game():
    number_to_guess = random.randint(1, 100)
    attempts = 0
    guessed = False

    while not guessed:
        guess = get_valid_input("Enter your guess: ")
        attempts += 1

        if guess < number_to_guess:
            print("ðŸ”» Too low! Try a higher number.")
        elif guess > number_to_guess:
            print("ðŸ”º Too high! Try a lower number.")
        else:
            print(f"ðŸŽ¯ Congratulations! You guessed the number {number_to_guess} in {attempts} attempts.")
            guessed = True

def play_again():
    while True:
        choice = input("\nDo you want to play again? (y/n): ").lower()
        if choice in ['y', 'yes']:
            return True
        elif choice in ['n', 'no']:
            print("Thanks for playing! See you next time ðŸ‘‹")
            return False
        else:
            print("Please enter 'y' or 'n'.")

def main():
    welcome()
    while True:
        play_game()
        if not play_again():
            break

if __name__ == "__main__":
    main()
